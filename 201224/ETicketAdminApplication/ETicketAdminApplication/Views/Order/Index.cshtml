@{
}


@model List<ETicketAdminApplication.Models.Order>

<div class="container">



    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Costumer Name</th>
                    <th scope="col">Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Products</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@item.User.Email</td>
                <td>@item.Tickets.Count</td>
                <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">View Order</a></td>
                <td><a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-danger">Create Invoice</a></td>
            </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>

