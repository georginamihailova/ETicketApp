@{
}


@model ETicketAdminApplication.Models.Order

<div>Details for Order</div>

<div class="container">
 

    @for (int i = 0; i < Model.Tickets.Count; i++)
    {
        var item = Model.Tickets.ElementAt(i).SelectedTicket;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.TicketImage" style="height: 50%;" alt="Image for product!">

                    <div class="card-body">
                        <h3 class="card-title">@item.TicketName</h3>
                        <p class="card-text">@item.TicketDescription</p>


                        <h6>Price: $@item.TicketPrice</h6>
                    </div>

                
                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>